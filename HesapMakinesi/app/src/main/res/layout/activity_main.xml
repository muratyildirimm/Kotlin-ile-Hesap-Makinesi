<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/sayiGoster"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/edittextarkaplan"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="40dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnAC"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@drawable/butonkenarlik"
                android:onClick="btnac"
                android:text="@string/btnAC"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btnArtiEksi"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@drawable/butonkenarlik"
                android:onClick="btnSayitik"
                android:text="+/-"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btnYuzde"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@drawable/butonkenarlik"
                android:text="%"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btnBolu"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@drawable/butonkenarlik"
                android:onClick="btnOpTik"
                android:text="/"
                android:textSize="28sp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button

                android:id="@+id/btn7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@drawable/butonkenarlik"
                android:onClick="btnSayitik"
                android:text="7"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@drawable/butonkenarlik"
                android:onClick="btnSayitik"
                android:text="@string/btn8"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@drawable/butonkenarlik"
                android:onClick="btnSayitik"
                android:text="@string/btn9"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btnCarpi"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@drawable/butonkenarlik"
                android:onClick="btnOpTik"
                android:text="X"
                android:textSize="28sp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@drawable/butonkenarlik"
                android:onClick="btnSayitik"
                android:text="4"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@drawable/butonkenarlik"
                android:onClick="btnSayitik"
                android:text="5"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1pt"
                android:layout_weight="0"
                android:background="@drawable/butonkenarlik"
                android:onClick="btnSayitik"
                android:text="6"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btnEksi"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@drawable/butonkenarlik"
                android:onClick="btnOpTik"
                android:text="-"
                android:textSize="28sp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@drawable/butonkenarlik"
                android:onClick="btnSayitik"
                android:text="1"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@drawable/butonkenarlik"
                android:onClick="btnSayitik"
                android:text="2"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@drawable/butonkenarlik"
                android:onClick="btnSayitik"
                android:text="3"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btnArti"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@drawable/butonkenarlik"
                android:onClick="btnOpTik"
                android:text="+"
                android:textSize="28sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn0"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@drawable/butonkenarlik"
                android:text="0"
                android:textSize="28sp"
                android:onClick="btnSayitik" />

            <Button
                android:layout_margin="1pt"
                android:id="@+id/btnBos"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/butonkenarlik"
                android:textSize="28sp" />

            <Button
                android:id="@+id/btnNokta"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@drawable/butonkenarlik"
                android:onClick="btnSayitik"
                android:text="."
                android:textSize="28sp" />

            <Button
                android:id="@+id/btnEsittir"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/cardview_shadow_start_color"
                android:onClick="btnEsittirTik"
                android:text="="
                android:textColor="@color/farklibutonyazirengi"
                android:textSize="28sp" />
        </TableRow>

    </TableLayout>

</LinearLayout>